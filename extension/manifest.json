{
  "manifest_version": 3,
  "name": "Car Price Scraper",
  "version": "0.1.0",
  "description": "Injects a scraper into the current page and downloads CSV.",
  "permissions": ["activeTab", "scripting", "downloads", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Car Scraper",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "content-discoverycars.js", "content-expedia.js"],
      "run_at": "document_idle"
    }
  ]
}
